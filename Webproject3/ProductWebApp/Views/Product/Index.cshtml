
@{
    ViewBag.Title = "Index";
}
@using BOL;

<h2>Product</h2>
<div class="container">
    <h2>Hover Rows</h2>
    <p>The .table-hover class enables a hover state on table rows:</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                foreach (Product p in Model)
                {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.PrductName</td>
                            <td>@p.Price</td>
                            <td>@p.Dsc</td>
                            <td>@p.Quantity</td>
                            <td><a href="/product/edit/@p.Id"><button type="button" class="btn btn-primary active">Update </button></a></td>
                            <td><button type="button" class="btn btn-primary disabled">Delete </button></td>

                        </tr>
                        
                    }
                }

        </tbody>
    </table>
    <a href="/product/add"><button type="button" class="btn btn-primary active">Add Product </button></a>

    <hr />
    <img src="~/Images/m2.jpg"/>
</div>
