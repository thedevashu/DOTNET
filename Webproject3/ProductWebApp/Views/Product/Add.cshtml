
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>
<form action="/product/add" method="post">
    <div class="form-group">
        <label for="email">Id</label>
        <input type="number" class="form-control" id="id" name="id" value="@Model.Id">
    </div>
    <div class="form-group">
        <label for="pwd">Product Name:</label>
        <input type="text" class="form-control" id="prductname" name="prductname" value="@Model.PrductName">
    </div>
    <div class="form-group">
        <label for="pwd">Product Desc:</label>
        <input type="text" class="form-control" id="dsc" name="dsc" value="@Model.Dsc">
    </div>
    <div class="form-group">
        <label for="pwd">Product Price:</label>
        <input type="number" class="form-control" id="price" name="price" value="@Model.Price">
    </div>
    <div class="form-group">
        <label for="pwd">Product Quantity:</label>
        <input type="number" class="form-control" id="quantity" name="quantity" value="@Model.Quantity">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>
<hr />
